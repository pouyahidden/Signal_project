<!--                        android:gravity="center"-->
<!--                        android:textColor="@color/white"/>-->

<!--                </com.google.android.material.card.MaterialCardView>-->
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:id="@+id/description"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/title"
                    android:maxLength="100"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/text_color_roshan"
                    android:text="dfsdfsdfsdfshduyuuyasgdasdgasiygduyasgduasyddddddddddddddddddddddddddddddddddddddddddddddddddgduaysgdiew's number of characters?"

                    android:textSize="15sp"
                    />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@mipmap/clock"
                    android:id="@+id/clock"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    app:tint="@color/icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Hour and 15 minutes ago"
                    android:id="@+id/time"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/text_color_roshan"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/clock"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ticket id:7755"
                    android:id="@+id/ticketid"
                    android:textSize="15sp"

                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/text_color_roshan"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>



            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>